#!/usr/bin/env node
process.env.NODE_PATH = __dirname + '/../node_modules/'

const program = require('commander')

program
  .version(require('../package.json').version)
  .usage('<command> [options]')
program
  .command('add')
  .description('添加一个模版,暂不可用')
  .alias('a')
  .action(() => {
    require('../lib/add')()
  })
program
  .command('list')
  .description('查看所有的模版')
  .alias('l')
  .action(() => {
    require('../lib/list')()
  })
program
  .command('init')
  .description('生成一个新项目')
  .alias('i')
  .action(() => {
    require('../lib/init')()
  })
program
  .command('delete')
  .description('删除一个模版,暂不可用')
  .alias('d')
  .action(() => {
    require('../lib/delete')()
  })
program
  .parse(process.argv)

if(!program.args.length){
  program.help()
}
